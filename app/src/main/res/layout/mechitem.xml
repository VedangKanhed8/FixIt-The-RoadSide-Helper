<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="8dp"
    app:cardCornerRadius="8dp"
    android:layout_margin="16dp">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="8dp"
    app:cardCornerRadius="8dp"
    android:layout_margin="16dp">

    <ImageView
        android:id="@+id/profilId"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:srcCompat="@drawable/ic_launcher_doc_foreground">
    </ImageView>

    <TextView
        android:id="@+id/mechNameId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/profilId"
        android:layout_marginLeft="10dp"
        android:text="Name"
        android:textColor="@color/black"
        android:textSize="20dp"></TextView>
    <TextView
        android:id="@+id/mechAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mechNameId"
        android:text="Address"
        android:textColor="@color/black"
        android:textSize="15dp"
        android:layout_toRightOf="@id/profilId"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"></TextView>
    <TextView
        android:id="@+id/mechphone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mechAdd"
        android:text="Mobile:"
        android:textColor="@color/black"
        android:textSize="15dp"
        android:layout_toRightOf="@id/profilId"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"></TextView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/profilId"
        android:weightSum="2.0"
        style="?attr/buttonBarStyle">
        >

        <Button
            android:id="@+id/ShowUserMechrat"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="User\nFeedback"
            android:textSize="12sp"></Button>
        <View
            android:layout_width="10dp"
            android:layout_height="match_parent"
            android:background="@android:color/white"/>

        <Button
            android:id="@+id/bookApp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Book\nAppointment"
            android:textSize="12sp">

        </Button>
    </LinearLayout>
</RelativeLayout>
</androidx.cardview.widget.CardView>