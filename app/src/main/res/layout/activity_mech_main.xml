<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".mechMain">

    <Button
        android:id="@+id/ordBtn"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:fontFamily="@font/poppins_medium"
        android:text="@string/appointment"
        android:textAllCaps="false"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mechordlogo" />

    <Button
        android:id="@+id/feedBackbtn"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:fontFamily="@font/poppins_medium"
        android:text="@string/see_feedbacks"
        android:textAllCaps="false"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mechfedlogo" />

    <ImageView
        android:id="@+id/mechordlogo"
        android:layout_width="200sp"
        android:layout_height="200sp"
        app:flow_horizontalAlign="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@drawable/myorders" />

    <ImageView
        android:id="@+id/mechfedlogo"
        android:layout_width="200sp"
        android:layout_height="200sp"
        app:flow_horizontalAlign="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ordBtn"
        tools:srcCompat="@drawable/seefeedback" />
</androidx.constraintlayout.widget.ConstraintLayout>