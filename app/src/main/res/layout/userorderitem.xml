<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="8dp"
    app:cardCornerRadius="8dp"
    android:layout_margin="16dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:id="@+id/ordMechname"
            android:layout_width="250sp"
            android:layout_height="wrap_content"
            android:text="Name:"
            android:textSize="20sp"></TextView>

        <TextView
            android:id="@+id/ordMechPhone"
            android:layout_width="250sp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ordMechname"
            android:layout_marginTop="10sp"
            android:text="Phone Number:"
            android:textSize="20sp"></TextView>


        <ImageButton
            android:id="@+id/ordFeedRat"
            android:layout_width="match_parent"
            android:layout_height="100sp"
            android:layout_toRightOf="@id/ordMechname"
            android:background="#C5EFF4"
            android:scaleType="fitXY"
            android:src="@drawable/ratelogot"></ImageButton>


    </RelativeLayout>


</androidx.cardview.widget.CardView>