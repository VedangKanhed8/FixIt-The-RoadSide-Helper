<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="8dp"
    app:cardCornerRadius="8dp"
    android:layout_margin="16dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:id="@+id/userFeedName"
            android:layout_width="250sp"
            android:layout_height="wrap_content"
            android:text="User name : "
            android:textSize="20sp"></TextView>

        <TextView
            android:id="@+id/userReview"
            android:layout_width="250sp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/userFeedName"
            android:layout_marginTop="10sp"
            android:text="Nice service"
            android:textColor="#151313"
            android:textSize="20sp"></TextView>


        <TextView
            android:id="@+id/ordFeedRat"
            android:layout_width="match_parent"
            android:layout_height="100sp"
            android:layout_toRightOf="@id/userFeedName"
            android:gravity="center_horizontal|center_vertical"
            android:text="4.5"
            android:textSize="55sp"></TextView>


    </RelativeLayout>


</androidx.cardview.widget.CardView>